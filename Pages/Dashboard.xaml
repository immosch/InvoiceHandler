<UserControl x:Class="InvoiceHandler.Pages.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InvoiceHandler.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="830">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#2a2b2e" Offset="0.0"/>
                <GradientStop Color="#52545c" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- layout -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="0.8*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Statistics -->
            <Border Margin="15" BorderThickness="2" BorderBrush="#92B9BD" CornerRadius="8" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- title -->
                    <Label Content="Statistics:" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="#92B9BD"/>

                    <!-- Total Invoices -->
                    <Label Grid.Row="1" Content="Total invoices:" VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="#92B9BD" Margin="8,0,0,0"/>
                    <Label Grid.Row="1" Content="--" VerticalAlignment="Center" HorizontalAlignment="Right" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="#92B9BD" Margin="0,0,24,0"/>
                    <!-- Total revenue -->
                    <Label Grid.Row="2" Content="Total revenue:" VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="#92B9BD" Margin="8,0,0,0"/>
                    <Label Grid.Row="2" Content="--eur" VerticalAlignment="Center" HorizontalAlignment="Right" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="#92B9BD" Margin="0,0,24,0"/>
                    <!-- Total customers -->
                    <Label Grid.Row="3" Content="Total customers:" VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="#92B9BD" Margin="8,0,0,0"/>
                    <Label Grid.Row="3" Content="--" VerticalAlignment="Center" HorizontalAlignment="Right" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="#92B9BD" Margin="0,0,24,0"/>
                    <!-- Total products -->
                    <Label Grid.Row="4" Content="Total products:" VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="#92B9BD" Margin="8,0,0,0"/>
                    <Label Grid.Row="4" Content="--" VerticalAlignment="Center" HorizontalAlignment="Right" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="#92B9BD" Margin="0,0,24,0"/>
                    <!-- Most selling product -->
                    <Label Grid.Row="5" Content="Most selling product:" VerticalAlignment="Center" HorizontalAlignment="Left" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="#92B9BD" Margin="8,0,0,0"/>
                    <Label Grid.Row="5" Content="Työ" VerticalAlignment="Center" HorizontalAlignment="Right" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="#92B9BD" Margin="0,0,24,0"/>
                </Grid>
            </Border>

            <!-- Recent Invoices -->
            <Border Margin="15" BorderThickness="2" BorderBrush="#92B9BD" CornerRadius="8" Grid.Column="1" Padding="10" Grid.RowSpan="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.15*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!-- title -->
                    <Label Content="Recent invoices:" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="#92B9BD"/>

                    <!-- Recent invoices list -->
                    <DataGrid x:Name="recInvoices" Grid.Row="1" Background="#52545c" AutoGenerateColumns="True">
                        <!-- add data once availilable -->
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Total revenue overtime graph -->
            <Border Margin="15" BorderThickness="2" BorderBrush="#92B9BD" CornerRadius="8" Padding="10" Grid.Column="0" Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.15*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!-- title -->
                    <Label Content="Yearly revenue trend:" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="#92B9BD"/>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
