<UserControl x:Class="InvoiceHandler.Pages.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InvoiceHandler.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="830">


    <UserControl.Resources>
        <ResourceDictionary Source="/Assets/styles.xaml"/>
    </UserControl.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#2a2b2e" Offset="0.0"/>
                <GradientStop Color="#52545c" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- layout -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.75*" MinWidth="200" MaxWidth="500"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="0.9*" MinHeight="310"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Statistics -->
            <Border Margin="15" BorderThickness="2" BorderBrush="White" CornerRadius="8" Padding="10,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.7*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- title -->
                    <Label Content="Statistics:" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="White"/>

                    <!-- Total Invoices -->
                    <Border Padding="5" Grid.Row="1" BorderBrush="White" BorderThickness="1" CornerRadius="8" Margin="0,0,0,5">
                        <StackPanel Orientation="Horizontal">
                            <Label Width="190" Content="Total invoices:" HorizontalAlignment="Left" Style="{StaticResource dashLabel}" Margin="8,0,0,0"/>
                            <Label Content="--" Style="{StaticResource dashLabel}" Margin="0,0,24,0"/>
                        </StackPanel>
                    </Border>
                    <!-- Total revenue -->
                    <Border Padding="5" Grid.Row="2" BorderBrush="White" BorderThickness="1" CornerRadius="8" Margin="0,0,0,5">
                        <StackPanel Orientation="Horizontal">
                            <Label Width="190" Grid.Row="2" Content="Total revenue:" HorizontalAlignment="Left" Style="{StaticResource dashLabel}" Margin="8,0,0,0"/>
                            <Label Grid.Row="2" Content="--eur" HorizontalAlignment="Right" Style="{StaticResource dashLabel}" Margin="0,0,24,0"/>
                        </StackPanel>
                    </Border>
                    <!-- Total customers -->
                    <Border Padding="5" Grid.Row="3" BorderBrush="White" BorderThickness="1" CornerRadius="8" Margin="0,0,0,5">
                        <StackPanel Orientation="Horizontal">
                            <Label Width="190" Grid.Row="3" Content="Total customers:" HorizontalAlignment="Left" Style="{StaticResource dashLabel}" Margin="8,0,0,0"/>
                            <Label Grid.Row="3" Content="--" HorizontalAlignment="Right" Style="{StaticResource dashLabel}" Margin="0,0,24,0"/>
                        </StackPanel>
                    </Border>
                    <!-- Total products -->
                    <Border Padding="5" Grid.Row="4" BorderBrush="White" BorderThickness="1" CornerRadius="8" Margin="0,0,0,5">
                        <StackPanel Orientation="Horizontal">
                            <Label Width="190" Grid.Row="4" Content="Total products:" HorizontalAlignment="Left" Style="{StaticResource dashLabel}" Margin="8,0,0,0"/>
                            <Label Grid.Row="4" Content="--" HorizontalAlignment="Right" Style="{StaticResource dashLabel}" Margin="0,0,24,0"/>
                        </StackPanel>
                    </Border>
                    <!-- Most selling product -->
                    <Border Padding="5" Grid.Row="5" BorderBrush="White" BorderThickness="1" CornerRadius="8" Margin="0,0,0,5">
                        <StackPanel Orientation="Horizontal">
                            <Label Width="190" Grid.Row="5" Content="Most selling product:" HorizontalAlignment="Left" Style="{StaticResource dashLabel}" Margin="8,0,0,0"/>
                            <Label Grid.Row="5" Content="--" HorizontalAlignment="Right" Style="{StaticResource dashLabel}" Margin="0,0,24,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Recent Invoices -->
            <Border Margin="15" BorderThickness="2" BorderBrush="White" CornerRadius="8" Grid.Column="1" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.15*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!-- title -->
                    <Label Content="Recent invoices:" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="#92B9BD"/>

                    <!-- Recent invoices list -->
                    <DataGrid x:Name="recInvoices" Grid.Row="1" Background="#52545c" AutoGenerateColumns="True">
                        <!-- add data once availilable -->
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Total revenue overtime graph -->
            <Border Margin="15" BorderThickness="2" BorderBrush="White" CornerRadius="8" Padding="10" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.15*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!-- title -->
                    <Label Content="Yearly revenue trend:" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="#92B9BD"/>

                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
