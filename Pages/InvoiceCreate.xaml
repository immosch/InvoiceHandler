<UserControl x:Class="InvoiceHandler.Pages.InvoiceCreate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InvoiceHandler.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1500">

    <UserControl.Resources>
        <ResourceDictionary Source="/Assets/styles.xaml"/>
    </UserControl.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid Background="LightGray">

            <!-- layout -->
            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="75"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="140"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- title -->
            <TextBlock HorizontalAlignment="Center" Margin="24,12,0,0" FontSize="36" FontFamily="Arial Black">
                <Run Text="Create New Invoice for" />
                <Run Text="{Binding SelectedItem, ElementName=customerCombo}"/> 
            </TextBlock>

            <Separator Grid.Row="0" VerticalAlignment="Bottom" Background="Gray" Margin="50,0,50,0"/>

            <!-- invoice ID && Client selection -->
            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Background="Transparent">
                <TextBlock VerticalAlignment="Center" Text="Invoice ID" Margin="24,0,0,0" FontSize="36" FontWeight="Bold" FontFamily="Global Sans Serif" MinWidth="300"/>
                <Border VerticalAlignment="Center" BorderThickness="2" CornerRadius="8" BorderBrush="Gray" Margin="48,0,0,0" Padding="5" MinWidth="300">
                    <TextBox x:Name="txtInvoiceID" Margin="10,0,0,0" Text="binding next invoiceid" FontSize="28" FontFamily="Global Sans Serif" Background="Transparent" BorderThickness="0" IsReadOnly="True"/>
                </Border>

                <TextBlock Text="Customer" VerticalAlignment="Center" Margin="48,0,0,0" FontSize="36" FontWeight="Bold" FontFamily="Global Sans Serif" MinWidth="300"/>
                <Border VerticalAlignment="Center" BorderThickness="2" CornerRadius="8" BorderBrush="Gray" Margin="48,0,24,0" Padding="5"  MinWidth="300">
                    <ComboBox x:Name="customerCombo" Style="{StaticResource ComboBoxinvoice}" Margin="10,0,0,0" FontSize="28" SelectedIndex="0"/>
                </Border>
            </StackPanel>
            <Separator Grid.Row="1" VerticalAlignment="Bottom" Background="Gray" Margin="50,0,50,0"/>

            <!-- invoice date && due date -->
            <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Background="Transparent">
                <TextBlock VerticalAlignment="Center" Text="Invoice Date" Margin="24,0,0,0" FontSize="36" FontWeight="Bold" FontFamily="Global Sans Serif" MinWidth="300"/>
                <Border VerticalAlignment="Center" BorderThickness="2" CornerRadius="8" BorderBrush="Gray" Margin="48,0,0,0" MinWidth="300">
                    <DatePicker x:Name="datePicker" IsTodayHighlighted="True">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FontSize" Value="28"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DatePickerTextBox">
                                            <Border Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                </Border>

                <TextBlock Text="Invoice Due Date" VerticalAlignment="Center" Margin="48,0,0,0" FontSize="36" FontWeight="Bold" FontFamily="Global Sans Serif" MinWidth="300"/>
                <Border VerticalAlignment="Center" BorderThickness="2" CornerRadius="8" BorderBrush="Gray" Margin="48,0,24,0" Padding="5" MinWidth="300">
                    <ComboBox Style="{StaticResource ComboBoxinvoice}" Margin="10,0,0,0" FontSize="28" >
                        <ComboBoxItem Content="7 Days"/>
                        <ComboBoxItem Content="14 Days" IsSelected="True"/>
                        <ComboBoxItem Content="24 Days"/>
                        <ComboBoxItem Content="30 Days"/>
                    </ComboBox>
                </Border>
            </StackPanel>
            <Separator Grid.Row="2" VerticalAlignment="Bottom" Background="Gray" Margin="50,0,50,0"/>

            <!-- add info textbox -->
            <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" Background="Transparent">
                <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderThickness="2" CornerRadius="8" BorderBrush="Gray" Margin="0,10" Padding="5" MinWidth="1000">
                    <TextBox x:Name="addInf" Focusable="True" GotFocus="addInf_GotFocus" LostFocus="addInf_LostFocus" Margin="10,0,0,0" Text="You can write additional information about the invoice here..." FontSize="28" FontFamily="Global Sans Serif" BorderThickness="0" Background="Transparent" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
                </Border>
            </StackPanel>
            <Separator Grid.Row="3" VerticalAlignment="Bottom" Background="Gray" Margin="50,0,50,0"/>

            <!-- product selection -->




        </Grid>

    </ScrollViewer>
   
</UserControl>
