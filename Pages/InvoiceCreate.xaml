<UserControl x:Class="InvoiceHandler.Pages.InvoiceCreate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InvoiceHandler.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1500">

    <UserControl.Resources>
        <ResourceDictionary Source="/Assets/styles.xaml"/>
    </UserControl.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid Background="LightGray">

            <!-- layout -->
            <Grid.ColumnDefinitions>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="140"/>
                <RowDefinition Height="140"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- title -->
            <TextBlock HorizontalAlignment="Center" Margin="24,12,0,0" FontSize="36" FontFamily="Arial Black">
                <Run Text="Create New Invoice for" />
                <Run Text="{Binding SelectedItem.Name, ElementName=customerCombo}"/>
            </TextBlock>

            <Separator Grid.Row="0" VerticalAlignment="Bottom" Background="Gray" Margin="50,0,50,0"/>

            <!-- invoice ID && Client selection -->
            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Background="Transparent">
                <TextBlock VerticalAlignment="Center" Text="Invoice ID" Margin="24,0,0,0" FontSize="36" FontWeight="Bold" FontFamily="Global Sans Serif" MinWidth="250"/>
                <Border VerticalAlignment="Center" BorderThickness="2" CornerRadius="8" BorderBrush="Gray" Margin="48,0,0,0" Padding="5" MinWidth="250">
                    <TextBox x:Name="txtInvoiceID" Margin="10,0,0,0" Text="{Binding nextID}" FontSize="28" FontFamily="Global Sans Serif" Background="Transparent" BorderThickness="0" IsReadOnly="True" HorizontalContentAlignment="Right"/>
                </Border>

                <TextBlock Text="Customer" VerticalAlignment="Center" Margin="48,0,0,0" FontSize="36" FontWeight="Bold" FontFamily="Global Sans Serif" MinWidth="250"/>
                <Border VerticalAlignment="Center" BorderThickness="2" CornerRadius="8" BorderBrush="Gray" Margin="48,0,24,0" Padding="5"  MinWidth="250">
                    <ComboBox x:Name="customerCombo" Style="{StaticResource ComboBoxinvoice}" Margin="10,0,0,0" FontSize="28" SelectedIndex="0" ItemsSource="{Binding CustomerList}" DisplayMemberPath="Name"/>
                </Border>
            </StackPanel>
            <Separator Grid.Row="1" VerticalAlignment="Bottom" Background="Gray" Margin="50,0,50,0"/>

            <!-- invoice date && due date -->
            <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Background="Transparent">
                <TextBlock VerticalAlignment="Center" Text="Invoice Date" Margin="24,0,0,0" FontSize="36" FontWeight="Bold" FontFamily="Global Sans Serif" MinWidth="250"/>
                <Border VerticalAlignment="Center" BorderThickness="2" CornerRadius="8" BorderBrush="Gray" Margin="48,0,0,0" MinWidth="250">
                    <DatePicker x:Name="datePicker" IsTodayHighlighted="True" SelectedDate="{Binding CurrentDate}">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="FontSize" Value="28"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DatePickerTextBox">
                                            <Border Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                </Border>

                <TextBlock Text="Due Date" VerticalAlignment="Center" Margin="48,0,0,0" FontSize="36" FontWeight="Bold" FontFamily="Global Sans Serif" MinWidth="250"/>
                <Border VerticalAlignment="Center" BorderThickness="2" CornerRadius="8" BorderBrush="Gray" Margin="48,0,24,0" Padding="5" MinWidth="250">
                    <ComboBox Style="{StaticResource ComboBoxinvoice}" Margin="10,0,0,0" FontSize="28" >
                        <ComboBoxItem Content="7 Days"/>
                        <ComboBoxItem Content="14 Days" IsSelected="True"/>
                        <ComboBoxItem Content="24 Days"/>
                        <ComboBoxItem Content="30 Days"/>
                    </ComboBox>
                </Border>
            </StackPanel>
            <Separator Grid.Row="2" VerticalAlignment="Bottom" Background="Gray" Margin="50,0,50,0"/>

            <!-- add info textbox -->
            <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" Background="Transparent">
                <Border VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderThickness="2" CornerRadius="8" BorderBrush="Gray" Margin="0,10" Padding="5" MinWidth="1000">
                    <TextBox x:Name="addInf" Focusable="True" GotFocus="addInf_GotFocus" LostFocus="addInf_LostFocus" Margin="10,0,0,0" Text="You can write additional information about the invoice here..." FontSize="28" FontFamily="Global Sans Serif" BorderThickness="0" Background="Transparent" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
                </Border>
            </StackPanel>
            <Separator Grid.Row="3" VerticalAlignment="Bottom" Background="Gray" Margin="50,0,50,0"/>

            <!-- Select products infocard -->
            <TextBlock Grid.Row="4" Text="You can add up to 10 Products" FontSize="22" FontFamily="Arial Black" HorizontalAlignment="Center" Margin="0,5"/>
            <Border Grid.Row="4" Width="1000" Height="65" BorderThickness="1" BorderBrush="Gray" CornerRadius="12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Text="Add/Remove" FontSize="20" Margin="25,0,0,0"/>
                    <TextBlock Text="Product" FontSize="20" Margin="100,0,0,0"/>
                    <TextBlock Text="Qty" FontSize="20" Margin="150,0,0,0"/>
                    <TextBlock Text="Price per Unit" FontSize="20" Margin="125,0,0,0"/>
                    <TextBlock Text="Total amount" FontSize="20" Margin="125,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- product selection #1 -->
            <Border Grid.Row="5" Width="1000" Height="65" MinHeight="65">
                <StackPanel Grid.Row="5" Width="1000" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button BorderThickness="0" Background="Transparent" Margin="50,0,0,0">
                        <Button.Content>
                            <Image Source="/Assets/Icons/plus_16px.png"/>
                        </Button.Content>
                    </Button>
                    <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="8" MinWidth="150" Margin="100,0,0,0">
                        <ComboBox Style="{StaticResource ComboBoxinvoice}"/>
                    </Border>
                    <Border MinWidth="100" Margin="65,0,0,0" BorderThickness="1" BorderBrush="Gray" CornerRadius="8">
                        <TextBox Text="Type amount..." Background="Transparent" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </Border>
                    <TextBlock Text="80$" FontSize="22" MinWidth="100" Margin="120,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="1234$" FontSize="22" MinWidth="100" Margin="140,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- product selection #2 -->
            <Border Grid.Row="6" Width="1000" Height="65" MinHeight="65" Margin="0,10,0,0">
                <StackPanel Grid.Row="5" Width="1000" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button BorderThickness="0" Background="Transparent" Margin="50,0,0,0">
                        <Button.Content>
                            <Image Source="/Assets/Icons/plus_16px.png"/>
                        </Button.Content>
                    </Button>
                    <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="8" MinWidth="150" Margin="100,0,0,0">
                        <ComboBox Style="{StaticResource ComboBoxinvoice}"/>
                    </Border>
                    <Border MinWidth="100" Margin="65,0,0,0" BorderThickness="1" BorderBrush="Gray" CornerRadius="8">
                        <TextBox Text="Type amount..." Background="Transparent" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </Border>
                    <TextBlock Text="80$" FontSize="22" MinWidth="100" Margin="120,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="1234$" FontSize="22" MinWidth="100" Margin="140,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- product selection #3 -->
            <Border Grid.Row="7" Width="1000" Height="65" MinHeight="65" Margin="0,10,0,0">
                <StackPanel Grid.Row="5" Width="1000" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button BorderThickness="0" Background="Transparent" Margin="50,0,0,0">
                        <Button.Content>
                            <Image Source="/Assets/Icons/plus_16px.png"/>
                        </Button.Content>
                    </Button>
                    <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="8" MinWidth="150" Margin="100,0,0,0">
                        <ComboBox Style="{StaticResource ComboBoxinvoice}"/>
                    </Border>
                    <Border MinWidth="100" Margin="65,0,0,0" BorderThickness="1" BorderBrush="Gray" CornerRadius="8">
                        <TextBox Text="Type amount..." Background="Transparent" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </Border>
                    <TextBlock Text="80$" FontSize="22" MinWidth="100" Margin="120,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="1234$" FontSize="22" MinWidth="100" Margin="140,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- product selection #4 -->
            <Border Grid.Row="8" Width="1000" Height="65" MinHeight="65" Margin="0,10,0,0">
                <StackPanel Grid.Row="5" Width="1000" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button BorderThickness="0" Background="Transparent" Margin="50,0,0,0">
                        <Button.Content>
                            <Image Source="/Assets/Icons/plus_16px.png"/>
                        </Button.Content>
                    </Button>
                    <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="8" MinWidth="150" Margin="100,0,0,0">
                        <ComboBox Style="{StaticResource ComboBoxinvoice}"/>
                    </Border>
                    <Border MinWidth="100" Margin="65,0,0,0" BorderThickness="1" BorderBrush="Gray" CornerRadius="8">
                        <TextBox Text="Type amount..." Background="Transparent" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </Border>
                    <TextBlock Text="80$" FontSize="22" MinWidth="100" Margin="120,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="1234$" FontSize="22" MinWidth="100" Margin="140,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- product selection #5 -->
            <Border Grid.Row="9" Width="1000" Height="65" MinHeight="65" Margin="0,10,0,0">
                <StackPanel Grid.Row="5" Width="1000" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button BorderThickness="0" Background="Transparent" Margin="50,0,0,0">
                        <Button.Content>
                            <Image Source="/Assets/Icons/plus_16px.png"/>
                        </Button.Content>
                    </Button>
                    <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="8" MinWidth="150" Margin="100,0,0,0">
                        <ComboBox Style="{StaticResource ComboBoxinvoice}"/>
                    </Border>
                    <Border MinWidth="100" Margin="65,0,0,0" BorderThickness="1" BorderBrush="Gray" CornerRadius="8">
                        <TextBox Text="Type amount..." Background="Transparent" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </Border>
                    <TextBlock Text="80$" FontSize="22" MinWidth="100" Margin="120,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="1234$" FontSize="22" MinWidth="100" Margin="140,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- product selection #6 -->
            <Border Grid.Row="10" Width="1000" Height="65" MinHeight="65" Margin="0,10,0,0">
                <StackPanel Grid.Row="5" Width="1000" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button BorderThickness="0" Background="Transparent" Margin="50,0,0,0">
                        <Button.Content>
                            <Image Source="/Assets/Icons/plus_16px.png"/>
                        </Button.Content>
                    </Button>
                    <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="8" MinWidth="150" Margin="100,0,0,0">
                        <ComboBox Style="{StaticResource ComboBoxinvoice}"/>
                    </Border>
                    <Border MinWidth="100" Margin="65,0,0,0" BorderThickness="1" BorderBrush="Gray" CornerRadius="8">
                        <TextBox Text="Type amount..." Background="Transparent" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </Border>
                    <TextBlock Text="80$" FontSize="22" MinWidth="100" Margin="120,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="1234$" FontSize="22" MinWidth="100" Margin="140,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- product selection #7 -->
            <Border Grid.Row="11" Width="1000" Height="65" MinHeight="65" Margin="0,10,0,0">
                <StackPanel Grid.Row="5" Width="1000" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button BorderThickness="0" Background="Transparent" Margin="50,0,0,0">
                        <Button.Content>
                            <Image Source="/Assets/Icons/plus_16px.png"/>
                        </Button.Content>
                    </Button>
                    <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="8" MinWidth="150" Margin="100,0,0,0">
                        <ComboBox Style="{StaticResource ComboBoxinvoice}"/>
                    </Border>
                    <Border MinWidth="100" Margin="65,0,0,0" BorderThickness="1" BorderBrush="Gray" CornerRadius="8">
                        <TextBox Text="Type amount..." Background="Transparent" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </Border>
                    <TextBlock Text="80$" FontSize="22" MinWidth="100" Margin="120,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="1234$" FontSize="22" MinWidth="100" Margin="140,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- product selection #8 -->
            <Border Grid.Row="12" Width="1000" Height="65" MinHeight="65" Margin="0,10,0,0">
                <StackPanel Grid.Row="5" Width="1000" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button BorderThickness="0" Background="Transparent" Margin="50,0,0,0">
                        <Button.Content>
                            <Image Source="/Assets/Icons/plus_16px.png"/>
                        </Button.Content>
                    </Button>
                    <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="8" MinWidth="150" Margin="100,0,0,0">
                        <ComboBox Style="{StaticResource ComboBoxinvoice}"/>
                    </Border>
                    <Border MinWidth="100" Margin="65,0,0,0" BorderThickness="1" BorderBrush="Gray" CornerRadius="8">
                        <TextBox Text="Type amount..." Background="Transparent" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </Border>
                    <TextBlock Text="80$" FontSize="22" MinWidth="100" Margin="120,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="1234$" FontSize="22" MinWidth="100" Margin="140,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- product selection #9 -->
            <Border Grid.Row="13" Width="1000" Height="65" MinHeight="65" Margin="0,10,0,0">
                <StackPanel Grid.Row="5" Width="1000" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button BorderThickness="0" Background="Transparent" Margin="50,0,0,0">
                        <Button.Content>
                            <Image Source="/Assets/Icons/plus_16px.png"/>
                        </Button.Content>
                    </Button>
                    <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="8" MinWidth="150" Margin="100,0,0,0">
                        <ComboBox Style="{StaticResource ComboBoxinvoice}"/>
                    </Border>
                    <Border MinWidth="100" Margin="65,0,0,0" BorderThickness="1" BorderBrush="Gray" CornerRadius="8">
                        <TextBox Text="Type amount..." Background="Transparent" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </Border>
                    <TextBlock Text="80$" FontSize="22" MinWidth="100" Margin="120,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="1234$" FontSize="22" MinWidth="100" Margin="140,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- product selection #10 -->
            <Border Grid.Row="14" Width="1000" Height="65" MinHeight="65" Margin="0,10">
                <StackPanel Grid.Row="5" Width="1000" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button BorderThickness="0" Background="Transparent" Margin="50,0,0,0">
                        <Button.Content>
                            <Image Source="/Assets/Icons/plus_16px.png"/>
                        </Button.Content>
                    </Button>
                    <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="8" MinWidth="150" Margin="100,0,0,0">
                        <ComboBox Style="{StaticResource ComboBoxinvoice}"/>
                    </Border>
                    <Border MinWidth="100" Margin="65,0,0,0" BorderThickness="1" BorderBrush="Gray" CornerRadius="8">
                        <TextBox Text="Type amount..." Background="Transparent" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    </Border>
                    <TextBlock Text="80$" FontSize="22" MinWidth="100" Margin="120,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="1234$" FontSize="22" MinWidth="100" Margin="140,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

        </Grid>
    </ScrollViewer>
</UserControl>
