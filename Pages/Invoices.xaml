<UserControl x:Class="InvoiceHandler.Pages.Invoices"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InvoiceHandler.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="830">
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#2a2b2e" Offset="0.0"/>
                <GradientStop Color="#52545c" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- layout -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="0.9*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Margin="15" BorderBrush="White" BorderThickness="2" CornerRadius="8" Padding="10">
                <Label Content="Create new invoice:" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="#92B9BD"/>
            </Border>

            <Border Margin="15" BorderBrush="White" BorderThickness="2" CornerRadius="8" Grid.Column="1" Padding="10">
                <Label Content="Edit existing invoice:" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="#92B9BD"/>
            </Border>

            <Border Margin="15" BorderBrush="White" BorderThickness="2" CornerRadius="8" Grid.ColumnSpan="2" Grid.Row="1" Padding="10">
                <Label Content="Search for an invoice:" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="/Assets/Fonts/#Roboto" FontSize="18" FontWeight="Bold" Foreground="#92B9BD"/>
            </Border>

        </Grid>
        

    </Grid>
</UserControl>
